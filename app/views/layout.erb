         <div class="nav">
            <% if logged_in? %>
              <a href="/memories/show"> Home </a>
              <a href="/memories/new"> Create a Memory </a>
              <a href="/logout"> Logout </a>
            <%end%>
        <% end %>

        <%= yield %>

