<br>
<h1>Create a Memory!</h1>
<br>
<form class="" action="/memories" method="post">
    <label for="title"> <strong> Title: </strong></label>
        <input type="text" id="title" name="title" value="">
        <br>
        <br>
    <label for="description"> <strong> Description: </strong></label>
        <textarea name="description" id="description" value=""></textarea>
        <br>
        <br>
    <label for="date"> <strong> Date: </strong></label>
        <input type="text" id="date" name="date" value="">
        <br>
        <br>
    <label for="image_url"><strong> Image Link: </strong></label>
        <input type="text" id="image_url" name="image_url" value="" >
        <br>
        <br>
    <label for="category_id"><strong> Category: (select one) </strong></label><br>
        
        <%@category.each do |cate|%>    
        <input type="radio" id="category_id" name="category_id" value="<%=cate.id%>"> <%= cate.name%> <br>
        <%end%>
        
        
    <br>
    <input type="submit" value="Create a Memory">
</form>

