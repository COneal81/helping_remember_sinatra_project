<h1>Edit your Memory</h1>

<form class="" action="/memories/<%= @memory.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
    <label for="title"> Title: </label>
        <input type="text" id="title" name="title" value="<%=@memory.title%>">
        <br>
    <label for="description"> Description: </label>
        <textarea name="description" style="width:auto; height:auto;"> <%= @memory.description%></textarea>
        <br>
        <br>
    <label for="date"> Date:</label>
        <input type="text" id="date" name="date" value="<%= @memory.date%>">
        <br>
        <br>
    <label for="image_url">Image Link: </label>
        <input type="text" id="image_url" name="image_url" value="<%= @memory.image_url%>">
        <br>
        <br>
    
    <label for="category_id"> Category: (select one) </label><br>
        <%@category.each do |cate|%>  
         <%# <%binding.pry %>
        <input type="radio" id="category_id " name="category_id"  value=" <%'checked' if @memory.category.name %>" > 
         <%=cate.name%>
          
        <br>
            
        <%end%>

     
    
    <br>
    <input type="submit" value="Update Memory">
</form>
